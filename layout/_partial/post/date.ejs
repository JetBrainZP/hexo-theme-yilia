<a href="<%- url_for(post.path) %>" class="<%= class_name %>">	
	  <time datetime="<%= date_xml(post.date) %>" itemprop="datePublished"><i class="icon-calendar icon"></i><%= date(post.date, date_format) %></time>
	<i class="icon-smile icon"></i><span><%=theme.author%></span>
	<% if (post.categories && post.categories.length){ %>
		<i class="icon-book icon"></i><span >
			<% post.categories.forEach(function(tag, i){ %> 
			<%-tag.name%>
			<% }) %>
		</span>
	<% } %>
	<i class="icon-sort icon"></i><span >阅读数 444次</span>
</a>
